 		case TK_CTL('l'):
 			term_clean();
 			continue;
+		case '\033':;	/* Arrow keys */
+			char cbuf[1];
+			cbuf[0] = '\0';
+			int fl = fcntl(STDIN_FILENO, F_GETFL);
+			fcntl(STDIN_FILENO, F_SETFL, fl | O_NONBLOCK);
+			read(STDIN_FILENO, cbuf, 1);
+			if (*cbuf == '[') {
+				read(STDIN_FILENO, cbuf, 1);
+				switch (*cbuf) {
+				case 'A':	/* ↑ */
+					term_push("lki", 4);
+					break;
+				case 'B':	/* ↓ */
+					term_push("lji", 4);
+					break;
+				case 'D':	/* ← */
+					term_push("i", 1);
+					break;
+				case 'C':	/* → */
+					term_push("lli", 3);
+					break;
+				}
+			}
+			fcntl(STDIN_FILENO, F_SETFL, fl);
+			goto leave;
 		case TK_CTL('o'):;
 			preserve(int, xvis, 0)
 			term_exec(":", 1, /*nop*/, /*nop*/)
